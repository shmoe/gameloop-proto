{
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build object active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "-I\"include\"",
                "-c",
                "src/${fileBasenameNoExtension}.cpp",
                "-o",
                "build/${fileBasenameNoExtension}.o"
            ],
            "options": {},
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "make",
            "command": "/usr/bin/make",
            "group": "build"
        },
        {
            "type": "shell",
            "label": "make debug",
            "command": "/usr/bin/make",
            "args": [
                "debug"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "make clean",
            "command": "/usr/bin/make",
            "args": [
                "clean"
            ]
        }

    ],
    "version": "2.0.0"
}
